<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <div class="page-header">
      <h2>新規ユーザ登録画面
        <small>Sign up form</small>
      </h2>
    </div>

    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">×</span></button>
        <strong>お知らせ</strong> ： <%= flash[:notice] %>
      </div>
    <% end %>

    <% if @user.errors.any? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">×</span>
        </button>
        <strong><%= @user.errors.count %>件のエラーがあります。ご確認ください。</strong>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @user, local: true) do |f| %>

      <div class="input-group input-group-lg">
        <span class="input-group-addon sign-up">名前</span>
        <%= f.text_field :name, class: 'form-control', placeholder: "テスト太郎" %>
      </div>
      <br>
      <div class="input-group input-group-lg">
        <span class="input-group-addon sign-up">メールアドレス</span>
        <%= f.email_field :email, class: 'form-control', placeholder: "test@sample.com" %>
      </div>
      <br>
      <div class="input-group input-group-lg">
        <span class="input-group-addon sign-up">パスワード</span>
        <%= f.password_field :password, class: 'form-control', placeholder: "password（6文字以上で入力）" %>
      </div>
      <br>
      <div class="input-group input-group-lg">
        <span class="input-group-addon sign-up">パスワード（確認用）</span>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "password（6文字以上で再入力）" %>
      </div>
      <br>
      <div class="pull-right">
        <%= f.submit "ユーザ登録", class: 'btn btn-primary btn-lg' %>
      </div>

    <% end %>

  </div>
</div>
