<%= form_with(model: @twtext, local: true ,url: choose_new_or_edit, class: 'new_twtext_form' ) do |form| %>

<% if @twtext.errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
      <span aria-hidden="true">×</span></button>
    <strong><%= @twtext.errors.count %>件のエラーがあります。ご確認ください。</strong>
    <ul>
      <% @twtext.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="new_twtext_area input-group input-group-lg">
  <span class="input-group-addon">つぶやき内容</span>
  <%= form.text_area :content, class: 'form-control', placeholder: "ここに140文字以内で入力してください" %>
</div>
<div class="input-group input-group-lg">
  <span class="input-group-addon">画像を添付　</span>
  <% if @twtext.image? %>
    <ul class="list-group" style="margin-bottom: 0px;">
      <li class="list-group-item">
        <%= image_tag(@twtext.image.url, :class => "img-thumbnail", :width => "300") %>
      </li>
    </ul>
  <% end %>
  <%= form.file_field :image, class: 'form-control', id: :twtext_image%>
  <%= form.hidden_field :image_cache %>
</div>
<br>
<div class="pull-right">
  <%= form.submit "送信する", class: 'btn btn-primary btn-lg' %>
</div>
<% end %>
